{
  "name": "vscode-hypermerge",
  "displayName": "Hypermerge for VSCode",
  "description": "Browse and edit Hypermerge documents.",
  "version": "0.2.0",
  "publisher": "inkandswitch",
  "repository": {
    "url": "https://github.com/inkandswitch/vscode-hypermerge.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:hypermergefs",
    "onView:hypermergeExplorer"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "Hypermerge",
      "properties": {
        "hypermergefs.roots": {
          "type": "array",
          "default": [],
          "description": "A list of hypermergefs URLs to use as roots in the browser."
        }
      }
    },
    "commands": [
      {
        "command": "hypermergeExplorer.register",
        "title": "Open document",
        "icon": {
          "dark": "resources/open.svg",
          "light": "resources/open.svg"
        }
      },
      {
        "command": "hypermergeExplorer.create",
        "title": "Create document",
        "icon": {
          "dark": "resources/create.svg",
          "light": "resources/create.svg"
        }
      },
      {
        "command": "hypermergeExplorer.remove",
        "title": "Remove document"
      },
      {
        "command": "hypermergeExplorer.copyUrl",
        "title": "Copy document URL"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "hypermergeExplorer.register"
        }
      ],
      "view/title": [
        {
          "command": "hypermergeExplorer.register",
          "when": "view == hypermergeExplorer",
          "group": "navigation"
        },
        {
          "command": "hypermergeExplorer.create",
          "when": "view == hypermergeExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hypermergeExplorer.remove",
          "when": "view == hypermergeExplorer"
        },
        {
          "command": "hypermergeExplorer.copyUrl",
          "when": "view == hypermergeExplorer"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hypermergeDetails",
          "when": "resourceScheme == hypermerge",
          "title": "Hypermerge",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "hypermergeExplorer",
          "name": "Hypermerge Document Explorer"
        }
      ],
      "hypermergeDetails": [
        {
          "id": "hypermergeHistory",
          "when": "resourceScheme == hypermerge",
          "name": "Current Document History"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "rebuild": "electron-rebuild --version 3.0.1 -f -w utp-native"
  },
  "devDependencies": {
    "@types/node": "^10.2.0",
    "electron-rebuild": "^1.8.2",
    "typescript": "^3.1.4",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "@hyperswarm/network": "0.0.4",
    "automerge": "^0.9.1",
    "bs58": "^4.0.1",
    "clipboardy": "^1.2.3",
    "deep-diff": "github:jeffpeterson/diff",
    "discovery-cloud-client": "https://github.com/orionz/discovery-cloud-client",
    "hypermerge": "git+https://github.com/automerge/hypermerge.git",
    "pump": "^3.0.0",
    "random-access-file": "^2.0.1",
    "random-access-memory": "^3.0.0",
    "utp-native": "^2.1.0",
    "ws": "^6.1.0"
  }
}
